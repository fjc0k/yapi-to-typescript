{
  "name": "yapi-to-typescript",
  "version": "0.10.2",
  "description": "根据 YApi 的接口定义生成 TypeScript 的请求函数。",
  "main": "lib/index.js",
  "bin": {
    "ytt": "lib/cli.js"
  },
  "homepage": "https://github.com/fjc0k/yapi-to-typescript",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:fjc0k/yapi-to-typescript.git"
  },
  "bugs": {
    "url": "https://github.com/fjc0k/yapi-to-typescript/issues"
  },
  "keywords": [
    "yapi",
    "typescript",
    "typing"
  ],
  "files": [
    "lib"
  ],
  "author": {
    "name": "Jay Fong",
    "email": "fjc0kb@gmail.com",
    "url": "https://github.com/fjc0k"
  },
  "scripts": {
    "api-test": "ts-node --transpile-only src/cli.ts",
    "lint": "eslint --ext .ts src/",
    "lint-fix": "eslint --fix --ext .ts src/",
    "test-only": "jest",
    "test": "jest --coverage",
    "build": "tsc",
    "release": "standard-version -a",
    "postrelease": "yarn lint && yarn build && yarn test-only && git push --follow-tags origin master && npm publish"
  },
  "eslintConfig": {
    "root": true,
    "extends": "io"
  },
  "eslintIgnore": [
    "lib",
    "__snapshots__"
  ],
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "!<rootDir>/src/**/cli.ts"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  },
  "devDependencies": {
    "@types/cookie": "^0.3.2",
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.9",
    "@types/json-schema": "^7.0.1",
    "@types/json5": "^0.0.30",
    "@types/mockjs": "^1.0.2",
    "@types/node": "^10.12.10",
    "@types/request-promise-native": "^1.0.15",
    "codecov": "^3.1.0",
    "eslint": "^5.9.0",
    "eslint-config-io": "^0.1.1",
    "jest": "^23.6.0",
    "standard-version": "^4.4.0",
    "ts-jest": "^23.10.5",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "change-case": "^3.0.2",
    "commander": "^2.19.0",
    "consola": "^2.3.0",
    "cookie": "^0.3.1",
    "fs-extra": "^7.0.1",
    "json-schema-generator": "^2.0.6",
    "json-schema-to-typescript": "^6.1.0",
    "json-ts": "^1.6.4",
    "json5": "^2.1.0",
    "mockjs": "^1.0.1-beta3",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "ts-node": "^8.0.2",
    "tslib": "^1.9.3",
    "vtils": "^0.76.1"
  }
}
